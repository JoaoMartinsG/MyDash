<%= simple_form_for @vehicle do |f| %>
  <%= f.input :type_of_vehicle, as: :radio_buttons, collection: ['Car', 'Motorcycle'] %>
  <%= f.input :make %>
  <%= f.input :model  %>
  <%= f.input :plate  %>
  <%= f.input :year  %>
  <%= f.input :mileage  %>
  <%= f.input :driver  %>
  <%= f.submit %>
<% end %>
